modules = ["php-8.2", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33155
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Application"

[[workflows.workflow]]
name = "Laravel Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "rm -f public/hot && php artisan config:cache && php artisan route:cache && php artisan serve --host=0.0.0.0 --port=5000 --env=production"]
build = ["bash", "-c", "composer install --optimize-autoloader --no-dev && npm ci && npm run build"]

[nix]
channel = "stable-25_05"
